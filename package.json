{
  "name": "github-layout-audit",
  "version": "1.0.0",
  "description": "Playwright-based screenshot automation for GitHub page layout auditing",
  "main": "index.js",
  "scripts": {
    "install-browsers": "npx playwright install",
    "auth": "npx ts-node src/auth-setup.ts",
    "screenshot": "npx playwright test src/screenshot.test.ts",
    "screenshot:full": "FULL_PAGE=true npx playwright test src/screenshot.test.ts",
    "screenshot:dark": "COLOR_SCHEME=dark npx playwright test src/screenshot.test.ts",
    "test": "npx playwright test",
    "clean": "rm -rf screenshots test-results"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["playwright", "screenshots", "github", "audit", "layout"],
  "author": "Your Name",
  "license": "MIT"
}